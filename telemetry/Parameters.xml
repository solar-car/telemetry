<Parameters>
    <Modules>
        <DHT11>
            <Temperature mode="Input" unit="C">4</Temperature>
            <Test mode="Input" unit=":)">1</Test>
        </DHT11>
        <Example_Accelerometer>
            <Velocity mode="Input" unit="m/s">4</Velocity>
            <Debug mode="Output" unit=":)">32</Debug>
        </Example_Accelerometer>
    </Modules>

    <Settings>
        <!-- In general, any "interval" or "timeout" setting implies time in seconds -->
        <Networking>
            <!-- TCP port used for establishing authenticated connection -->
            <ClientTCPPort>1776</ClientTCPPort>
            <ClientTCPAuthPort>1777</ClientTCPAuthPort>
            <ServiceTCPPort>1778</ServiceTCPPort>
            <ServiceTCPAuthPort>1779</ServiceTCPAuthPort>
            
            <!-- URL for the server for clients to connect to for receiving data, not included in public repo for security -->
            <ServerHost></ServerHost>
            <ClientDebugHost>127.0.0.1</ClientDebugHost>
            <ServiceDebugHost>127.0.0.2</ServiceDebugHost>
            <ServerDebugHost>127.0.0.3</ServerDebugHost>
        </Networking>
        <Security>
            <!--Possible modes are "Disabled", "Enabled" (password)
                Note that changing this will only work if the server is configured to the same mode as specified.-->
            <PasswordAuthentication>Enabled</PasswordAuthentication>
        </Security>
    </Settings>
</Parameters>